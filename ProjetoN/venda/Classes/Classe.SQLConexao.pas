unit Classe.SQLConexao;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB,

  FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Error, FireDAC.UI.Intf, FireDAC.Phys.Intf, FireDAC.Stan.Def,
  FireDAC.Stan.Pool, FireDAC.Stan.Async, FireDAC.Phys,
  FireDAC.Comp.Client,

  Classe.Criptografia;

Type

   TSQLConexao = Class
   Private
     FSQLConexao      : TFDConnection;
     function GetSQLConexao: TFDConnection;
     procedure SetSQLConexao(const Value: TFDConnection);
   Public
     constructor Create;
     destructor  Destroy;
     Procedure   Clear;

     property SQLConexao  : TFDConnection    Read  GetSQLConexao         Write SetSQLConexao;

   End;

implementation

{ TSQLConexao }

procedure TSQLConexao.Clear;
begin
   FSQLConexao := Nil;
end;

constructor TSQLConexao.Create;
begin
  FSQLConexao      := TFDConnection.create(Application);
end;

destructor TSQLConexao.Destroy;
begin
  if Assigned(FSQLConexao) then
     FSQLConexao.Free;
end;

function TSQLConexao.GetSQLConexao: TFDConnection;
begin
   Result := FSQLConexao;
end;

procedure TSQLConexao.SetSQLConexao(const Value: TFDConnection);
begin
  FSQLConexao := Value;
end;

end.
